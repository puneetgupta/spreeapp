<div class="add-on hero-unit">
<h3>Auction History</h3>
<% unless @orders.present? %>
	<h5>No Auctions Yet</h5>
<%else%>
	<table class="table table-striped table-hover">
		<thead>
			<tr class="dang">
				<th align="center">
					User Id
				</th>
				<th align="center">
					Bid Price
				</th>
				<th align="center">
					Bid Date
				</th>
			</tr>
		</thead>
		<body>
			<% @orders.each do |order| %>
				<tr>
					<td align="center">
						<%= pretty_id(order.user) %>
					</td>
					<td align="center">
						<%= order.line_items.first.bid_price %>
					</td>
					<td align="center">
						<%= order.created_at.strftime("%F") %>
					</td>
				</tr>
			<% end %>
		</body>
	</table>
<%end%>
</div>
<div class="hide" id="max-bid-price" value=<%= @orders.blank? ? 0 : @orders.last.line_items.first.bid_price%>></div>
<div class="hide" id="min-bid-hike" value=<%= @orders.blank? ? 0 : min_bid_hike(@orders.last.line_items.first.bid_price)%>></div>
