<!-- Header END -->

<div class="main">
  <div class="container">
    <ul class="breadcrumb">
        <li class="active"><%= Spree.t(:quick_link) %></li>
    </ul>
    <!-- BEGIN SIDEBAR & CONTENT -->
    <div class="row margin-bottom-40">
      <!-- BEGIN SIDEBAR -->
      <div class="row margin-bottom-40">
        <!-- BEGIN SIDEBAR -->
        <div class="sidebar col-md-3 col-sm-3">
          <ul class="list-group margin-bottom-25 sidebar-menu">
            <%Spree::Navigation.order("position").each do |nav|%>
              <% unless ((nav.url == "/auctions" or nav.url == "/payment" or nav.url == "/profile") and !spree_current_user) %>
                <li class="list-group-item clearfix"><i class="fa fa-angle-right"></i> <%= link_to nav.name.upcase, nav.url ,{ :class => "dropdown-toggle"}%></li>
              <%end%>
            <%end%>
          </ul>
        </div>
      <!-- END SIDEBAR -->

      <!-- BEGIN CONTENT -->
      <div class="col-md-9 col-sm-9">
        <h1><%= Spree.t(:forgot_password) %></h1>
        <div class="content-form-page">
          <div class="row">
            <div class="col-md-7 col-sm-7">
              <p><%= Spree.t(:instructions_reset_password) %></p>

                <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path , :html => {:class => "form-horizontal form-without-legend"} do |f| %>
                  <div class="form-group">
                    <label for="email" class="col-lg-4 control-label"><%= Spree.t(:email)  %></label>
                    <div class="col-lg-8">
                      <%= f.email_field :email, :class=>"form-control", :id=>"email" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-5">
                      <%= f.submit Spree.t(:reset_pass), :class => 'btn btn-primary' %>
                      <%= link_to "Cancel", root_path, :class=> "btn btn-default" %>
                    </div>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- END CONTENT -->
    </div>
    <!-- END SIDEBAR & CONTENT -->
  </div>
</div>

<!-- BEGIN PRE-FOOTER -->