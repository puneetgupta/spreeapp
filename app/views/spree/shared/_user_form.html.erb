<fieldset>
  <legend><%= Spree.t(:your_email) %></legend>
  <div class="form-group">
    <label for="email" class="col-lg-4 control-label"><%= Spree.t(:email) %> <span class="require">*</span></label>
    <div class="col-lg-8">
      <%= f.email_field :email, :class => 'form-control' ,:id => "email"%>
    </div>
  </div>
</fieldset>
<fieldset>
  <legend><%= Spree.t(:your_password) %></legend>
  <div class="form-group">
    <label for="password" class="col-lg-4 control-label"><%= Spree.t(:password) %> <span class="require">*</span></label>
    <div class="col-lg-8">
      <%= f.password_field :password, :class => 'form-control', :id =>"password" %>
    </div>
  </div><hr>
  <div class="form-group">
    <label for="confirm-password" class="col-lg-4 control-label"><%= Spree.t(:confirm_password) %><span class="require">*</span></label>
    <div class="col-lg-8">
      <%= f.password_field :password_confirmation, :class => 'form-control', :id=>"confirm-password" %>
    </div>
  </div>
</fieldset>
<fieldset>
  <legend><%= Spree.t(:news_letter) %></legend>
  <div class="checker ">
    <label >
        <input type="checkbox" name="spree_user[subscribed]" value=true><%= Spree.t(:sub_here) %><br>
    </label>
  </div>
</fieldset>