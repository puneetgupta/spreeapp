<div class="add-on hero-unit">
<h3>Current Auction</h3>
<% unless @orders.present? %>
	<h5>No current Auction</h5>
<%else%>
	<table class="table table-striped table-hover">
		<thead>
			<tr class="dang">
				<th align="center">
					Name
				</th>
				<th align="center">
				    Image
				</th>
				<th align="center">
					Order Id
				</th>
				<th align="center">
					Bid Price
				</th>
				<th align="center">
					Bid Date
				</th>
				<th align="center">
					Status
				</th>
			</tr>
		</thead>
		<body>
			<% @orders.each do |order| %>
				<% product = order_product(order) %>
				<tr>
					<td>
					<%= product.name %>
					</td>
					<td>
						<%if product.images.first %>
							<%= image_tag(product.images.first.try(:attachment).url(:mini)) %>
						<%end%>
					</td>
					<td align="center">
						<%= link_to order.number, order_url(order) %>
					</td>
					<td align="center">
						<%= order.line_items.first.bid_price %>
					</td>
					<td align="center">
						<%= order.created_at.strftime("%F") %>
					</td>
					<td align="center">
						<%= order.state %>
					</td>
				</tr>
			<% end %>
		</body>
	</table>
<%end%>
<hr>
<h3>Previous Auctions</h3>
<% unless @order_history.present? %>
	<h5>No Previous Auction</h5>
<%else%>
	<table class="table table-striped table-hover">
		<thead>
			<tr class="dang">
				<th align="center">
					Order Id
				</th>
				<th align="center">
					Bid Price
				</th>
				<th align="center">
					Bid Date
				</th>
				<th align="center">
					Status
				</th>
			</tr>
		</thead>
		<body>
			<% @order_history.each do |order| %>
				<tr>
					<td align="center">
						<%= link_to order.number, order_url(order) %>
					</td>
					<td align="center">
						<%= order.line_items.first.bid_price %>
					</td>
					<td align="center">
						<%= order.created_at.strftime("%F") %>
					</td>
					<td align="center">
						<%= order.state == "Approved" ? "Won" : "Loose" %>
					</td>
				</tr>
			<% end %>
		</body>
	</table>
<%end%>

</div>