<% if @page.layout.present? and @page.render_layout_as_partial? %>
  <%= render :partial => @page.layout %>
<% else %>
  <% content_for :head do -%>
    <%- if @page.meta_title.present? -%>
      <meta name="title" content="<%=@page.meta_title%>">
    <%- else -%>
      <meta name="title" content="<%=@page.title%>">
    <%- end -%>
    <meta name="keywords" content="<%=@page.meta_keywords%>">
    <meta name="description" content="<%=@page.meta_description%>">
  <% end -%>

  <% content_for :sidebar do %>
    <% if "products" == @current_controller && @taxon %>
      <%= render :partial => "spree/shared/filters" %>
    <% else %>
      <%= render :partial => "spree/shared/taxonomies" %>
    <% end %>
  <% end %>

<div class="main">
  <div class="container">
    <ul class="breadcrumb">
        <li class="active"><%= Spree.t(:quick_link)%></li>
    </ul>
    <!-- BEGIN SIDEBAR & CONTENT -->
    <div class="row margin-bottom-40">
      <!-- BEGIN SIDEBAR -->
      <div class="sidebar col-md-3 col-sm-3">
        <ul class="list-group margin-bottom-25 sidebar-menu">
          <%Spree::Navigation.order("position").each do |nav|%>
            <% unless ((nav.url == "/auctions" or nav.url == "/payment" or nav.url == "/profile") and !spree_current_user) %>
              <li class="list-group-item clearfix"><i class="fa fa-angle-right"></i> <%= link_to nav.name.upcase, nav.url ,{ :class => "dropdown-toggle"}%></li>
            <%end%>
          <%end%>
        </ul>
      </div>
      <!-- END SIDEBAR -->      

      <!-- BEGIN CONTENT -->
      <div class="col-md-9 col-sm-9">
        <h2><%=@page.title%></h2>
        <div class="content-page" id="page_content">
          <%= raw @page.body %>
        </div>
      </div>
      <!-- END CONTENT -->
    </div>
    <!-- END SIDEBAR & CONTENT -->
  </div>
</div>



<% end %>